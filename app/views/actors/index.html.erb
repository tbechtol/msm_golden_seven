<div class="page-header">
  <h1>Actors</h1>
</div>

<p><a href="actors/new_form" class="btn btn-primary">Add a New Actor</a></p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Dob</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
    <tr>
      <td><img src = "<%= actor.image_url %>" width="80"></td>
      <td><%= actor.dob %></td>
      <td><%= actor.name %></td>
      <td><%= truncate(actor.bio) %></td>
      <td>
        Show
      </td>
      <td>
        Edit
      </td>
      <td>
        Delete
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
