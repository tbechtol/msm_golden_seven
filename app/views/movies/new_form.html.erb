<div>
  <h1>Add Movie</h1>
</div>

<form action = '/create_movie'>
  <!--  Label and input for title-->
  <label for="title">
    Title
  </label>
  <input type="text" id="title" name="title" placeholder="Title" class="form control">

  <!--  Label and input for year-->
  <div>
    <label for="year">
      Year
    </label>
    <input type="text" id="year" name="year" placeholder="Year" class="form control">
  </div>

  <!--  Label and input for duration-->
  <div>
    <label for="duration">
      Duration
    </label>
    <input type="text" id="duration" name="duration" placeholder="Duration" class="form control">
  </div>

  <!--  Label and input for description-->
  <div>
    <label for="description">
      Description
    </label>
    <input type="text" id="description" name="description" placeholder="Description" class="form control">
  </div>

  <!--  Label and input for img_url-->
  <div>
    <label for="img_url">
      Image url
    </label>
    <input type="text" id="img_url" name="img_url" placeholder="Image url" class="form control">
  </div>

  <!--  Label and input for director_id-->
  <div>
    <label for="director_id">
      Director
    </label>
    <div>
      <!--STUDY THIS TEXT TO PREPOPULATE A DROP DOWN LIST TO SELECT FROM  -->
      <%= select_tag(:director_id, options_from_collection_for_select(Director.all, :id, :name), :class => "form control") %>
    </div>
  </div>

  <!--  Button to actually create the movie-->
  <input type="submit" value="Create Movie" class="btn btn-primary">

</form>
